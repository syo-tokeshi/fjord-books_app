<h1>ユーザー</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="col">名前</th>
    <th scope="col">自己紹介</th>
    <th scope="col">Eメール</th>
    <th scope="col"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
      <td><%= user.email %></td>
      <td><%= link_to '詳細', user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
