<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if user_signed_in? %>
        <li class="nav-item active navbar-brand">
          <%= link_to t('views.layouts.books.index'), books_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active navbar-brand">
          <%= link_to t('views.layouts.users.index'), users_path, class: 'nav-link' %>
        </li>
        <li class="nav-item active navbar-brand">
          <%= link_to t('views.layouts.users.show'),user_path(current_user), class: 'nav-link fw-bold' %>
        </li>
        <li class="nav-item active navbar-brand">
          <%= link_to t('devise.shared.links.sign_out'), destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to t('devise.shared.links.sign_up'), new_user_registration_path, class: 'nav-link navbar-brand fw-bold' %>
        </li>
        <li class="nav-item active">
          <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: 'nav-link navbar-brand fw-bold' %>
        </li>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
